<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/image2">

    <!-- Dark overlay gradient (assumed to exist) -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_overlay" />

    <!-- Main Content Container (centered vertically & horizontally) -->
    <LinearLayout
        android:id="@+id/contentContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="32dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- App Logo -->
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_travel_logo"
            android:contentDescription="@string/app_logo"
            android:layout_marginBottom="24dp" />

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/explore_the_nworld_your_way"
            android:textSize="36sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:gravity="center"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="16dp" />

        <!-- Subtitle -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/discover_amazing_places_and_create_nunforgettable_memories"
            android:textSize="14sp"
            android:textColor="#E0E0E0"
            android:gravity="center"
            android:lineSpacingExtra="2dp"
            android:layout_marginBottom="48dp" />

        <!-- Action Buttons Row -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- Location FAB -->


            <!-- Sign Up Button -->


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSignUp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="64dp"
                android:layout_marginEnd="24dp"
                android:text="@string/login"
                android:textColor="@android:color/white"
                app:strokeColor="@android:color/white" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnExplore"
                android:layout_width="147dp"
                android:layout_height="64dp"
                android:elevation="8dp"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.05"
                android:paddingStart="20dp"
                android:paddingEnd="12dp"
                android:text="@string/explore_now2"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                app:backgroundTint="@color/primary"
                app:cornerRadius="32dp"
                app:icon="@drawable/ic_arrow_forward"
                app:iconGravity="textEnd"
                app:iconPadding="10dp"
                app:iconSize="20dp"
                app:iconTint="@android:color/white" />

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>